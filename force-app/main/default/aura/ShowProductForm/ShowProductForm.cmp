<aura:component controller="CustomerDetails" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    
    <aura:attribute name="ProductId" type="string" default="" />
    <div class="slds-m-around_medium">
        <lightning:card >
            <article class="slds-card ">
                <div class="slds-card__header slds-grid">
                    <header class="slds-media slds-media_center slds-has-flexi-truncate">
                        <div class="slds-media__figure">
                            <span class="slds-icon_container slds-icon-standard-product" title="account">
                                <lightning:icon iconName="standard:product" alternativeText="Event" title="Event" />
                                <span class="slds-assistive-text ">Product</span>
                            </span>
                        </div>
                        <div class="slds-media__body">
                            <h2 class="slds-card__header-title">
                                <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                                    <span>Search Product</span>
                                </a>
                            </h2>
                        </div>
                    </header>
                </div>
            </article>
            
            <div class="c-container">
                <lightning:layout >
                    <lightning:layoutItem padding="around-small" size="1"></lightning:layoutItem>
                    <lightning:layoutItem padding="around-small" size="10">
                        <div class="header-column">
                            <c:CustomSearchForProduct value="{!v.ProductId}" objectName="Product2" fieldName="Name"  contactType="" iconName="standard:products" placeholder="Enter Value" />
                        </div>
                    </lightning:layoutItem>
                </lightning:layout>
                <lightning:layoutItem padding="around-small" size="1"></lightning:layoutItem>
            </div>
        </lightning:card>
    </div>
    <aura:if isTrue="{!not(empty(v.ProductId))}">
        <c:ProductDetailAndPBComp ProductId="{!v.ProductId}" />
    </aura:if>
</aura:component>